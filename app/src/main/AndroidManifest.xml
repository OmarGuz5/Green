<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="code.app.omarg.green">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="code.app.omarg.green.start"
            android:label="Green"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="code.app.omarg.green.MainActivity"
            android:screenOrientation="portrait" />
        <activity android:name="code.app.omarg.green.GameMenuActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="code.app.omarg.green.LevelCompleteActivity"></activity>
    </application>

</manifest>